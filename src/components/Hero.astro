---
import Button from "./ui/Button.astro";
import { getAssetURL } from "@utils/getImage";

export interface Props {
  item: {
    tagline?: string;
    title?: string;
    description?: string;
    buttons?: Array<{
      button_id: {
        label: string;
        link: string;
      };
    }>;
    image?: string;
  };
}

const { item } = Astro.props;
const { tagline, title, description, buttons, image } = item;
---

<section
  class="relative bg-gradient-to-br from-primary/10 to-white/10 py-20 lg:py-32"
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <div>
        {
          tagline && (
            <span class="mb-4 bg-primary/10 text-primary/80 hover:bg-primary-100 inline-block px-3 py-1 rounded-full text-sm font-medium">
              {tagline}
            </span>
          )
        }
        <h1
          class="text-4xl lg:text-6xl font-bold text-gray-900 mb-6"
          set:html={title}
        />
        {
          description && (
            <p class="text-xl text-gray-600 mb-8 leading-relaxed">
              {description}
            </p>
          )
        }
        <div class="flex flex-col sm:flex-row gap-4">
          {
            buttons?.map((button, index) => (
              <Button
                href={button.button_id.link}
                variant={index === 0 ? "primary" : "white"}
              >
                {button.button_id.label}
              </Button>
            ))
          }
        </div>
      </div>
      <div class="relative">
        {
          image && (
            <div class="aspect-[4/3] bg-white rounded-3xl p-4 shadow-2xl overflow-hidden">
              <img
                src={getAssetURL(image)}
                alt="Hero image"
                class="w-full h-full object-cover rounded-2xl"
              />
            </div>
          )
        }
      </div>
    </div>
  </div>
</section>
