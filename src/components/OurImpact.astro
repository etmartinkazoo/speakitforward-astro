---
export interface Props {
  item: {
    title?: string;
    description?: string;
    stats?: Array<{
      stats_card_id: {
        value: string;
        label: string;
      };
    }>;
  };
}

const { item } = Astro.props;
const { title, description, stats } = item;
---

<section
  id="impact"
  class="py-20 bg-gradient-to-br from-primary/60 via-primary/60 to-primary/80"
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-3xl lg:text-4xl font-bold text-white mb-4">
        {title}
      </h2>
      <p class="text-xl text-purple-100 max-w-3xl mx-auto">
        {description}
      </p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
      {
        stats?.map((stat) => (
          <div class="text-center bg-white/10 backdrop-blur-sm rounded-lg p-6 hover:bg-white/20 transition-all duration-300">
            <div class="text-4xl lg:text-5xl font-bold text-white mb-2">
              {stat.stats_card_id.value}
            </div>
            <div class="text-purple-100 font-medium">
              {stat.stats_card_id.label}
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
