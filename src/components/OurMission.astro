---
import { getAssetURL } from "@utils/getImage";

export interface Props {
  item: {
    title?: string;
    description?: string;
    cards?: Array<{
      our_mission_card_id: {
        image: string;
        title: string;
        description: string;
      };
    }>;
  };
}

const { item } = Astro.props;
const { title, description, cards } = item;
---

<section id="about" class="py-20 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2
        class="text-3xl lg:text-4xl font-bold bg-gradient-to-r from-primary/60 to-primary/100 bg-clip-text text-transparent mb-4"
      >
        {title}
      </h2>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        {description}
      </p>
    </div>

    <div class="grid md:grid-cols-3 gap-8">
      {
        cards?.map((card) => (
          <div class="border border-primary shadow-lg hover:shadow-xl px-4 py-6  rounded-lg transition-shadow">
            <div class="text-center ">
              <div
                class={`w-16 h-16  rounded-full flex items-center justify-center mx-auto mb-4`}
              >
                <div class={`w-8 h-8 `}>
                  <img
                    src={getAssetURL(card.our_mission_card_id.image)}
                    alt=""
                  />
                </div>
              </div>
              <h2 class="text-xl">{card.our_mission_card_id.title}</h2>
            </div>
            <div class="text-center text-gray-600">
              {card.our_mission_card_id.description}
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
