---
export interface Props {
  variant?: "primary" | "white";
  href?: string;
  type?: "button" | "submit" | "reset";
}

const { variant = "primary", href } = Astro.props;

const baseClasses =
  "inline-flex items-center justify-center font-medium rounded-lg transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2 disabled:opacity-50 disabled:cursor-not-allowed px-4 py-2 text-base";

const variantClasses = {
  primary:
    "bg-blue-600 text-white hover:bg-blue-700 focus:ring-blue-500 border-2 border-blue-600 hover:border-blue-700",
  white:
    "bg-white text-gray-900 hover:bg-gray-50 focus:ring-gray-500 border-2 border-gray-300 hover:border-gray-400 shadow-sm",
};

// Combine all classes
const buttonClasses = `${baseClasses} ${variantClasses[variant]}`;

const Element = href ? "a" : "button";
---

{
  href ? (
    <a href={href} class={buttonClasses}>
      <slot />
    </a>
  ) : (
    <button class={buttonClasses}>
      <slot />
    </button>
  )
}
